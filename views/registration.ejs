<%- include('./Templates/headerTemp'); -%>
<div class="container">
    <div class="d-flex justify-content-center vertical-center">
        <div class="card card-register">
            <div class="card-header">
                <h3>Register</h3>
            </div>
            <div class="card-body">
                <form action="/register" method="POST">
                    <div class="form-group">
                        <label for="name" class="cols-sm-2 control-label">Your Name</label>
                        <div class="cols-sm-10">
                            <div class="input-group-prepend">
                                <span class="input-group-text"
                                    style="border-top-right-radius: 0;border-bottom-right-radius: 0;">
                                    <i class="fas fa-user"></i>
                                </span>
                                <input type="text" class="form-control" autocomplete="off"
                                    style="border-top-left-radius: 0;border-bottom-left-radius: 0;" name="name"
                                    id="it_name" placeholder="Enter your Name" required
                                    oninvalid="setCustomValidity('Please Enter the User Name')"
                                    onchange="try{setCustomValidity('')}catch(e){}" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="cols-sm-2 control-label">Your Email</label>
                        <div class="cols-sm-10">
                            <div class="input-group-prepend">
                                <span class="input-group-text"
                                    style="border-top-right-radius: 0;border-bottom-right-radius: 0;">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                <input type="text" class="form-control" autocomplete="off"
                                    style="border-top-left-radius: 0;border-bottom-left-radius: 0;" name="email"
                                    id="it_email" placeholder="Enter your Email" required pattern="[^@]+@[^@]+\.[a-zA-Z]{2,6}"
                                    oninvalid="setCustomValidity('Please enter a valid Email Id')"
                                    onchange="try{setCustomValidity('')}catch(e){}" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="username" class="cols-sm-2 control-label">Username</label>
                        <div class="cols-sm-10">
                            <div class="input-group-prepend">
                                <span class="input-group-text"
                                    style="border-top-right-radius: 0;border-bottom-right-radius: 0;">
                                    <i class="fas fa-users"></i>
                                </span>
                                <input type="text" class="form-control" onchange="validateUserId(this);this.oldvalue = this.value;"
                                    onfocus="this.oldvalue = this.value;" oninvalid="setCustomValidity('Please enter the Username')"
                                    style="border-top-left-radius: 0;border-bottom-left-radius: 0;" name="username"
                                    id="it_username" placeholder="Enter your Username" required autocomplete="off"/>
                            </div>
                        </div>
                    </div>
                    <% if(errorMsg != '') { %>
                    <div class="alert alert-danger" id="err_alert" style="text-align: center;" role="alert">
                        <%= errorMsg %>
                    </div>
                    <% } %>
                    <div class="form-group">
                        <label for="password" class="cols-sm-2 control-label">Password</label>
                        <div class="cols-sm-10">
                            <div class="input-group-prepend">
                                <span class="input-group-text"
                                    style="border-top-right-radius: 0;border-bottom-right-radius: 0;">
                                    <i class="fas fa-lock"></i>
                                </span>
                                <input type="password" class="form-control" autocomplete="off"
                                    style="border-top-left-radius: 0;border-bottom-left-radius: 0;" name="password"
                                    id="it_pwd" placeholder="Enter your Password" required/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="confirm" class="cols-sm-2 control-label">Confirm Password</label>
                        <div class="cols-sm-10">
                            <div class="input-group-prepend">
                                <span class="input-group-text"
                                    style="border-top-right-radius: 0;border-bottom-right-radius: 0;">
                                    <i class="fas fa-lock"></i>
                                </span>
                                <input type="password" class="form-control" autocomplete="off"
                                    style="border-top-left-radius: 0;border-bottom-left-radius: 0;" name="confirm"
                                    id="it_cnfpwd" placeholder="Confirm your Password" required />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-block login_btn">Register</button>
                    </div>
                    <div class="login-register">
                        <a href="/">Back to Login</a>
                    </div>
                    <h1 id="h1_errMsg" style="font-size: 0px;"><%= errorMsg %></h1>
                    <h1 id="h1_userName" style="font-size: 0px;"><%= userName %></h1>
                    <h1 id="h1_emailId" style="font-size: 0px;"><%= email %></h1>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="registrationVal.js" type="text/javascript"></script>
<%- include('./Templates/footerTemp'); -%>
